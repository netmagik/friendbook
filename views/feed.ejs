<%- include('partials/header') -%>

<h1 class="text-center">Main Feed</h1>
<!-- Photos collage -->
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-lg-3 justify-content-between mt-5">
            <a href="/postPage/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
            <div class="d-flex py-2 justify-content-between">
            <p>Posted by <a href="/feed/byuser/<%=posts[i].user._id%>" class="highlight"><%= posts[i].user.userName %></a></p>
              <div class="ml-auto d-flex">
                <% if(posts[i].likes.length > 0) {%> 
                  <p class="px-2">Liked by <%= posts[i].likes.length %> </p>
                <%}%>
                
                <!-- Like Button -->
                <form
                action="/feed/like/<%= posts[i]._id %>?_method=PUT"
                method="POST"
                >
                <button class="fa fa-heart" type="submit"></button>
                </form>
            </div>
            </div>
          </li>
        <% } %>

      </ul>

      <%- include('partials/footer') -%>