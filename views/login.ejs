<%- include('partials/header') -%>

<div class="row justify-content-center p-4">
  <section class="col-lg-3 mt-5">
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach(
    el => { %>
    <div class="alert alert-info"><%= el.msg %></div>
    <% }) %> <% } %>
    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control"
          id="email"
          aria-describedby="emailHelp"
          name="email"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
        />
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-primary full-width">Submit</button>
        <a href="/signup" class="mt-4 d-block text-center"
          >Don't have an account? Sign Up</a
        >
      </div>
    </form>
  </section>
</div>

<%- include('partials/footer') -%>
